# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/ottoman-platform
# OR for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ottoman-platform

# Redis (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Email Configuration - Resend (https://resend.com)
RESEND_API_KEY=re_123456789_your_resend_api_key
EMAIL_FROM=onboarding@resend.dev
EMAIL_FROM_NAME=Ottoman Platform

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:3000

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Storage Configuration (local or r2)
STORAGE_TYPE=local

# Cloudflare R2 Storage (Optional - for production)
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=ottoman-platform-uploads
R2_PUBLIC_URL=https://uploads.yourdomain.com

# API Keys (will be needed later)
# TRENDYOL_API_KEY=
# HEPSIBURADA_API_KEY=
# N11_API_KEY=
# PAYMENT_API_KEY=
